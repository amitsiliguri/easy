{
    "name": "easy/theme",
    "description": "Minimal Laravel authentication scaffolding with Blade and Tailwind.",
    "keywords": ["laravel", "auth"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/laravel/breeze/issues",
        "source": "https://github.com/laravel/breeze"
    },
    "authors": [
        {
            "name": "amitbiswaswebdev",
            "email": "amit.biswas.webdev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "illuminate/console": "^9.21",
        "illuminate/filesystem": "^9.21",
        "illuminate/support": "^9.21",
        "illuminate/validation": "^9.21"
    },
    "conflict": {
        "laravel/framework": "<9.19.0"
    },
    "autoload": {
        "psr-4": {
            "Easy\\Theme\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "Easy\\Theme\\ThemeServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}